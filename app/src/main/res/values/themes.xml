<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OBE_MNGT_SYS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item> <!-- Primary color -->
        <item name="colorPrimaryVariant">@color/colorPrimary</item> <!-- Darker shade of primary color -->
        <item name="colorOnPrimary">@color/white</item> <!-- Text/icon color on primary background -->
        <item name="colorSecondary">@color/teal_200</item> <!-- Secondary color -->
        <item name="colorSecondaryVariant">@color/Aqua</item> <!-- Darker shade of secondary color -->
        <item name="colorOnSecondary">@color/black</item> <!-- Text/icon color on secondary background -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- Status bar color -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item> <!-- Light status bar icons -->
    </style>

    <!-- Main application theme. -->
    <style name="Theme.OBE_MNGT_SYS" parent="Base.Theme.OBE_MNGT_SYS" />
</resources>