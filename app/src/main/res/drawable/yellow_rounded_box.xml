<!-- res/drawable/yellow_rounded_box.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid yellow background -->
    <solid android:color="#FFEB3B" /> <!-- You can adjust this yellow color as needed -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" /> <!-- Adjust radius for desired roundness -->

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#FBC02D" /> <!-- Slightly darker yellow border -->

    <!-- Optional padding -->
    <padding
        android:bottom="4dp"
        android:left="8dp"
        android:right="8dp"
        android:top="4dp" />
</shape>