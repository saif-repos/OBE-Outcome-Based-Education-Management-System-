<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/course_item_background">

    <!-- First Row - Basic Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Course Code -->
        <TextView
            android:id="@+id/tvCourseCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CS101"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"/>

        <!-- Course Name -->
        <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Introduction to Programming"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"/>

        <!-- Credit Hours -->
        <TextView
            android:id="@+id/tvCourseCredit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"/>

        <!-- Edit Icon -->
        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit"
            android:padding="4dp"
            android:gravity="center"/>

        <!-- Delete Icon -->
        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete"
            android:padding="4dp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Second Row - Additional Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Lab Info -->
        <TextView
            android:id="@+id/tvLab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lab: Yes"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <!-- Prerequisite Info -->
        <TextView
            android:id="@+id/tvPrerequisite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pre: CS100"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>