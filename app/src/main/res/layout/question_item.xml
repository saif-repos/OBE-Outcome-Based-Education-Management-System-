<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/question_item_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/questionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete question"/>
    </LinearLayout>

    <EditText
        android:id="@+id/questionEditText"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:hint="Enter your question here..."
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:padding="12dp"
        android:textSize="14sp"/>



    <!-- Add this LinearLayout right below the formatting buttons LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marks:"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/questionMarksEditText"
            android:layout_width="80dp"
            android:layout_height="61dp"
            android:background="@drawable/edit_text_background"
            android:hint="Marks"
            android:inputType="number"
            android:padding="8dp" />


        <EditText
            android:id="@+id/dlevel"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_background"
            android:hint="DIFICULTY LEVEL "
            android:padding="8dp" />


    </LinearLayout>




</LinearLayout>