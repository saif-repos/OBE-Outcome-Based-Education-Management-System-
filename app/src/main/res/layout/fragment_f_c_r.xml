<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fcr_root_layout"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faculty Course Assessment Report"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- PLO Table Section -->
        <TextView
            android:id="@+id/ploTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program Outcomes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/ploContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"/>

        <!-- CLO-PLO Mapping Section -->
        <TextView
            android:id="@+id/cloPloMappingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Learning Outcomes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView1"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/cloPloMappingContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border"/>
        </HorizontalScrollView>

        <!-- Metric Goals Section -->
        <TextView
            android:id="@+id/metricGoalsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Metric Goals"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView2"
            android:fillViewport="true"> <!-- Add this attribute -->

            <LinearLayout
                android:id="@+id/metricGoalsContainer"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"/>
        </HorizontalScrollView>

        <!-- Course Info Section -->
        <TextView
            android:id="@+id/courseInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/courseInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"/>

        <!-- Grade Distribution Section -->
        <TextView
            android:id="@+id/gradeDistributionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grade Distribution"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView3"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/gradeDistributionContainer"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"/>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/gradeNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*F Grades are excluded for calculating EPAN and EEMU."
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:gravity="end"/>

        <!-- CLO Wise Grades Section -->
        <TextView
            android:id="@+id/cloGradesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Learning Outcomes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/cloGradesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <!-- CLO to PLO Result Section -->
        <TextView
            android:id="@+id/cloPloResultTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLO to PLO Mapping and Results"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:id="@+id/horizontalScrollView4"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cloPloResultContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border"/>
        </HorizontalScrollView>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <!-- Error Message -->
        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/exportPdfButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export to PDF"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"/>


    </LinearLayout>

</ScrollView>