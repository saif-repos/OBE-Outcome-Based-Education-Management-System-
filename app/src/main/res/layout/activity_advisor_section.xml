<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ACTIVITIES.Advisor_section">

    <!-- Header Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/card_backgroundd"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Advisor Name -->
        <TextView
            android:id="@+id/advisorNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Advisor Name"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Role Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch Role:"
                android:textColor="#333333"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/roleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Advisor/Teacher"
                android:textColor="#333333"
                android:thumbTint="#00BCD4"
                android:trackTint="#757575"
                android:checked="false"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Sections Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_backgroundd"
        android:orientation="vertical">

        <!-- Sections Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="SECTIONS"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/advisorListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:listSelector="@drawable/list_item_selectorr"
            android:padding="4dp"
            android:clipToPadding="false"/>
    </LinearLayout>
</LinearLayout>